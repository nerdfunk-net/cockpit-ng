# Air-gapped Environment Configuration
# Copy this to .env.local for air-gapped deployments

# Enable air-gapped mode
NEXT_PUBLIC_AIR_GAPPED=true

# Disable external services
NEXT_PUBLIC_ANALYTICS_DISABLED=true
NEXT_PUBLIC_CDN_DISABLED=true

# Backend URL (adjust for your air-gapped environment)
BACKEND_URL=http://localhost:8000

# Optional: Custom branding for air-gapped deployments
NEXT_PUBLIC_APP_NAME="Cockpit Network Management (Air-gapped)"
NEXT_PUBLIC_APP_DESCRIPTION="Offline network management dashboard"
