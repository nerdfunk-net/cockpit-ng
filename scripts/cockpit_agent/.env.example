# Redis Configuration (Cockpit Redis server)
REDIS_HOST=cockpit.example.com
REDIS_PORT=6379
REDIS_PASSWORD=changeme
REDIS_DB=0

# set loglevel
LOGLEVEL=DEBUG

# Agent Identity (auto-detected if not set)
# AGENT_HOSTNAME=app-prod-01

# Git Configuration (comma-separated list for multiple repositories)
GIT_REPO_PATH=/opt/app/config,/opt/grafana/config,/opt/monitoring/config

# Docker Configuration (comma-separated list for multiple containers)
DOCKER_CONTAINER_NAME=app,grafana,prometheus,alertmanager

# Operational Settings
HEARTBEAT_INTERVAL=30
COMMAND_TIMEOUT=30
DOCKER_TIMEOUT=60
